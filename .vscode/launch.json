    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "NestJs Covid App Debugging",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}\\src\\main.ts",
        "preLaunchTask": "tsc:build- tsconfig.json",
        "outFiles": ["${workspaceFolder}/**/*.js", "!**/node_modules/**"],
        "console": "integratedTerminal",
        "restart": true
      }
    ]
  }
  